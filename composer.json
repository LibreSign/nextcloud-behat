{
    "name": "libresign/nextcloud-behat",
    "description": "Basic steps for a Nextcloud app",
    "keywords": [
        "php",
        "behat",
        "nextcloud"
    ],
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "prefer-stable": true,
    "authors": [{
        "name": "Vitor Mattos",
        "email": "vitor@php.rio"
    }],
    "scripts": {
        "bin": "echo 'bin not installed'",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "psalm": "psalm --threads=1",
        "psalm:update-baseline": "psalm --no-cache --threads=$(nproc) --update-baseline --set-baseline=psalm-baseline.xml",
        "post-install-cmd": [
            "@composer bin all install --ansi",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "@composer bin all update --ansi",
            "composer dump-autoload"
        ]
    },
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.10",
        "phpunit/phpunit": "*",
        "behat/behat": "^3.29",
        "libresign/behat-builtin-extension": "^0.6.3",
        "estahn/json-query-wrapper": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.9",
        "donatj/mock-webserver": "^2.9"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        }
    },
    "autoload": {
        "psr-4": {
            "Libresign\\NextcloudBehat\\": "src/"
        }
    }
}
